<div class="view-container">
  <div class="user_info">
    <div class=user_main_left>
      <div class="user_box">
        <div class="user_box-img">
          <img src="<%= gravatar_url(@user, { size:100 }) %>" alt="" class="user-img">
        </div>
        <div class="user_box_name">
          <p><%= @user.name %></p>
        </div>
      </div>
      
      <div class="user_email">
        <h3>email:</h3>
        <p><%= @user.email %></p>
      </div>
      <%= link_to image_tag("love-book-128.png", class:"book-logo"), words_path(@user) %>
      <%= link_to "your original book!", words_path(@user), class: "mybook_link" %>
    </div>

    <aside class="user_main_right">
      <% if current_user?(@user) %>
        <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-primary btn-lg mr-4" %>
        <%= link_to "Delete", user_path(@user.id), method: :delete, data: { confirm: "本当に削除しますか?" }, class: "btn btn-danger btn-lg" %>
      <% end %>
    </aside>
  </div>
  <% if @likes.any? %>
    <h3 class="favorite-title">favorites</h3>
    <div class="favorite_items">
      <%= render "favorites/favorite_word", likes: @likes %>
    </div>
  <% end %>
</div>