<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="nav-logo">
      <%= link_to "", root_path %>
    </div>
    <%= link_to "Olive", root_path, class: "navbar-brand h1 ml-2 mt-1" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse navbar-nav-top" id="navbarContent">
      <ul class="navbar-nav mr-auto"></ul>
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item"><%= link_to "view", view_path, class: "nav-link active" %></li>
          <li class="nav-item"><%= link_to "#{current_user.name}", user_path(current_user), class: "nav-link active" %></li>
          <li class="nav-item"><%= link_to "Mybook", words_path(current_user), class: "nav-link active" %></li>
          <li class="nav-item"><%= link_to "Logout", logout_path, method: :delete, class: "nav-link active" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Signup", new_user_path, class: "nav-link active" %></li>
          <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link active" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>