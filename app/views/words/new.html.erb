<h1 class="ml-2">Add New Words!</h1>
<div class="view-container">
  <%= form_with(model: @word, local: true) do |f| %>
  
    <%= render "layouts/error_messages", model: f.object %>
    
    <div class="form-group">
      <%= f.label :word, "Word:" %>
      <%= f.text_field :word, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :mean, "Mean:" %>
      <%= f.text_field :mean, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :example, "Example:" %>
      <%= f.text_field :example, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :category, "Category:" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
    </div>
    
    <div class="submit-bottum">
      <%= f.submit "sumbit", class: "btn btn-primary" %>
    </div>
    
    <%= link_to words_path, class: "back_link" do %>
      <i class="fas fa-reply reply-icon" ></i>Back
    <% end %>
  <% end %>  
</div>

  